<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="pieces_image_button_style">
        <item name="android:scaleType">fitXY</item>
<!--        <item name="android:background">@null</item>-->
        <item name="android:background">@drawable/black_chariot</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">0.5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:contentDescription">pieceDTO</item>
    </style>
    <style name="icon_image_button_style">
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <style name="icon_image_button_training_detail_control_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <style name="icon_image_view_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>
    <style name="TrainingTitleTextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">35sp</item>
        <item name="android:background">@drawable/title_background</item>
    </style>

</resources>