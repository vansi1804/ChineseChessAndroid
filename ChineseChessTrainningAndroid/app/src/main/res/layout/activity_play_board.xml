                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageButton
                    android:id="@+id/btn_previous_turn"
                    style="@style/icon_image_button_training_detail_control_style"
                    android:background="@drawable/previous_turn"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/tv_turn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0/turns"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:textStyle="italic"
                    tools:ignore="HardcodedText,NestedWeights" />

                <ImageButton
                    android:id="@+id/btn_next_turn"
                    style="@style/icon_image_button_training_detail_control_style"
                    android:background="@drawable/next_turn"
                    tools:ignore="ContentDescription" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>